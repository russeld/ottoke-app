@inherits LayoutComponentBase

<FluentLayout>
    <FluentHeader>
        Ottoke
    </FluentHeader>
    <FluentStack Class="main" Orientation="Orientation.Horizontal" Width="100%">
        @*<NavMenu />*@
        <AppBarMenu />
        <FluentBodyContent Class="body-content">
            <div class="content">
                @Body
            </div>
        </FluentBodyContent>
    </FluentStack>
    <FluentFooter>
        <a href="https://www.fluentui-blazor.net" target="_blank">Documentation and demos</a>
        <FluentSpacer />
        <a href="https://learn.microsoft.com/en-us/aspnet/core/blazor" target="_blank">About Blazor</a>
    </FluentFooter>

    <FluentDialogProvider @rendermode="RenderMode.InteractiveServer" />
    <FluentMessageBarProvider Section="MESSAGES_TOP" @rendermode="RenderMode.InteractiveServer" />
    <FluentToastProvider MaxToastCount="10" @rendermode="RenderMode.InteractiveServer" />
</FluentLayout>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>
