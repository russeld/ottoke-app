<MudDialog DefaultFocus="DefaultFocus.FirstChild">
    <TitleContent>
        <h2>Delete @TodoModel.Title @TodoModel.Id</h2>
    </TitleContent>
    <DialogContent>
        <MudPaper Elevation="0">
            <MudStack Spacing="4">
                <MudAlert Severity="Severity.Warning" Icon="@Icons.Material.Filled.Warning">You cannot reverse this action></MudAlert>
                <MudText><strong>Are you sure you want to delete this todo?</strong></MudText>
            </MudStack>
        </MudPaper>
    </DialogContent>
    <DialogActions>
        <MudStack Row="true" Spacing="5" Class="pa-5">
            <MudButton Variant="Variant.Outlined" Color="Color.Primary" OnClick="OnClickCancel">Cancel</MudButton>
            <MudButton Variant="Variant.Outlined" Color="Color.Error" OnClick="OnClickDeleteTodo">Delete Todo</MudButton>
        </MudStack>
    </DialogActions>
</MudDialog>