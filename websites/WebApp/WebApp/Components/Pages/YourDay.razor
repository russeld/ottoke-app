@page "/your-day"
@using Microsoft.AspNetCore.Authorization
@using WebApp.Components.Todos.Components.Cards
@attribute [Authorize]
@rendermode InteractiveServer

<MudContainer MaxWidth="MaxWidth.ExtraLarge" >
    <MudStack Class="mb-5 pa-5">
        <MudText TodosTypo="Typo.h3" Class="mb-5">@PageTitle</MudText>
        <MudGrid Spacing="5">
            <MudItem xs="12" md="6">
                <YourDayTodoCard />
            </MudItem>
        </MudGrid>
    </MudStack>
</MudContainer>
